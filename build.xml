<?xml version="1.0" encoding="UTF-8"?>
<project name="BENNAI_BENAMMAR_BackpackHero" default="jar">
	
    <target name="compile">
        <mkdir dir="classes"/>
        <javac srcdir="src" destdir="classes" includeantruntime="false">
            <classpath>
                <fileset dir="lib" includes="*.jar"/>
            </classpath>
        </javac>
    </target>
	
    <target name="jar" depends="compile">
        <jar destfile="BackpackHero.jar">
            <fileset dir="classes"/>
            <manifest>
                <attribute name="Main-Class" value="display.Main"/>
                <attribute name="Class-Path" value="lib/zen-6.0.jar"/>
            </manifest>
        </jar>
    </target>
	
    <target name="javadoc">
        <javadoc sourcepath="src" destdir="docs/doc" locale="en_US">
            <classpath>
                <fileset dir="lib" includes="*.jar"/>
            </classpath>
        </javadoc>
    </target>
	
    <target name="clean">
        <delete dir="classes"/>
        <delete file="BackpackHero.jar"/>
        <delete dir="docs/doc"/>
    </target>
    
</project>
